{
  "telemetry.telemetryLevel":"off",
  "workbench.colorTheme": "Material Theme Palenight High Contrast",
  "workbench.colorCustomizations": {
    "activityBar.background": "#05001f",
    "foreground": "#f4f7f4",
    "textCodeBlock.background": "#e62f2f",
    "editor.foreground": "#dad6d6",
    "editorWhitespace.foreground": "#ff0000",
    "editor.wordHighlightStrongBackground": "#f1252544",
    "editor.selectionHighlightBackground": "#f3530975",
    "editor.selectionBackground": "#135564",
    "scrollbarSlider.hoverBackground":"#1900ff"
  },
  "workbench.editor.titleScrollbarSizing": "large",
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "right",
  "workbench.editor.enablePreview":false,
  "workbench.editor.closeEmptyGroups": false,
  
  //Editor settings
  "editor.minimap.enabled": false,
  "editor.fontWeight": "bold",
  "editor.formatOnSave": true,
  "editor.scrollbar.horizontal": "visible",
  "editor.fontSize": 15,
  "editor.tabCompletion": "on",
  "editor.tabSize": 5,
  "editor.renderWhitespace": "all",
  "editor.tokenColorCustomizations": {
    "comments": "#278f35",
    "functions": "#7344be",
    "variables": "#19a6fd",
    "strings": "#ada101"
  },
 
  //Powershell 
  "powershell.integratedConsole.focusConsoleOnExecute": false,
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.scriptAnalysis.enable": true,
  "powershell.codeFormatting.autoCorrectAliases": true,
  "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
  "powershell.codeFormatting.useCorrectCasing": true,
  "powershell.codeFormatting.whitespaceBetweenParameters": true,
  "powershell.codeFormatting.addWhitespaceAroundPipe": false,

  "files.autoSave": "afterDelay",
  "git.enableSmartCommit": true,
  "[json]": {},

  "bracket-pair-colorizer-2.colors": ["Red", "Gold", "Green"],
  "bracket-pair-colorizer-2.highlightActiveScope": true,
  "bracket-pair-colorizer-2.forceIterationColorCycle": true,
  "bracket-pair-colorizer-2.forceUniqueOpeningColor": true,
  "bracket-pair-colorizer-2.rulerPosition": "Full",

  "remote.SSH.showLoginTerminal": true,
  "remote.SSH.useLocalServer": false,
  "remote.SSH.localServerDownload": "always",
  "explorer.confirmDelete": false,

  //Terminal settings
  "terminal.integrated.profiles.windows": {
    "PowerShell Core": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-nologo"]
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Windows PowerShell": {
      "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
      "args": ["-nologo"]
    }
  },
  "terminal.integrated.defaultProfile.windows": "Windows PowerShell",
  "terminal.integrated.fontFamily": "Consolas",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1,
  "terminal.integrated.rightClickBehavior": "copyPaste",

  "security.workspace.trust.untrustedFiles": "open",
  "window.zoomLevel": 1

}